<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="GV Chat" Height="464" Width="490" Unloaded="Window_Unloaded">
    <Grid Opacity="0.7" Margin="0,10,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbUserName" Height="40" Margin="244,10,10,0" TextWrapping="Wrap" Text="Имя юзера" VerticalAlignment="Top"/>
        <Button x:Name="bConnDiscon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,10,-63,0" VerticalAlignment="Top" Width="217" Height="40"/>
        <TextBox x:Name="tbMessage" Height="88" Margin="10,325,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" KeyDown="tbMessage_KeyDown"/>
        <ListBox x:Name="lbChat" Height="261" Margin="10,60,10,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
